phone-width = 1000px

body, html
  margin 0
  padding 0
  overflow-x hidden
  width 100%
  @media screen and (max-width phone-width)
    height 100%

.hs
  @media screen and (max-width phone-width)
    display none

.hd
  visibility hidden

.fix-nav
  top 0
  position absolute
  z-index 90
  width 100%
  min-width 650px
  height 90px
  background-color rgba(90, 90, 90, 0.08)
  .container
    margin 0 auto
    width 64%
    height 90px
    .logo
      margin-top 10px
      float left
    .link
      margin 0
      float right
      li
        display inline-block
        margin-right 18px
        vertical-align middle
        line-height 90px
        &:last-child
          margin-right 0
        a
          &:link
            text-decoration none
          color #ffffff
          font-family Helvetica, Arial, sans-serif
          font-size 18px
          cursor pointer

.block-f
  background-image url("../img/block-f-bg.png")
  background-size 100% 100%
  background-repeat no-repeat
  background-position top
  width 100%
  height 734px
  padding 1px
  overflow hidden

  @media screen and (max-width phone-width)
    background-size cover
    width 100%
    height 100%
    position relative
    z-index 1

  .logo
    position absolute
    margin-top 10px
    float left
    width 15%
    top 9%
    left 10%
    overflow hidden
    img
      width 100%
    @media screen and (min-width phone-width)
      display none

  .display
    width 100%
    height 100%
    position relative
    z-index 1
    padding 1px
    .zhuangbi
      width 50%
      min-width 650px
      margin 0 auto
      margin-top 10%
      img
        width 100%

      @media screen and (max-width phone-width)
        margin-top 35%
        width 100%

    .stores
      position absolute
      left 18%
      top 475px
      width 15%
      a
        display block
        margin-bottom 25px
        width 100%
        img
          width 100%
        &:last-child
          margin-bottom 0

      @media screen and (max-width phone-width)
        position absolute
        left 25%
        top 80%
        width 35%
        a
          margin-bottom 50px

    .introduce
      position absolute
      left 67%
      top 460px
      width 20%
      @media screen and (max-width phone-width)
        top 10%
        width 45%
        left 35%
      .normal
        width 100%
        @media screen and (max-width phone-width)
          display none
      .phone
        width 100%
        @media screen and (min-width phone-width)
          display none

